{% extends 'GlavBundle::layoutAdmin.html.twig' %}

{% block infoUserTop  %}
    <h1>Prestamos</h1>
 <ul>
        <li>
            <a href="{{ path('prestamo_new') }}">
                Registrar Prestamo
            </a>
        </li>
    </ul>
    <table class="table table-striped table-bordered bootstrap-datatable datatable">



        <thead>
            <tr>
                <th>Id</th>
                <th>Empleado</th>
                <th>Valor</th>
                <th>Observacion</th>
                <th>Estado</th>
                <th>Fecha</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('prestamo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.empleado }}</td>
                <td>{{ entity.valor }}</td>
                <td>{{ entity.observacion }}</td>
                {% if entity.estado == 1 %}
                <td>Debe</td>
                {% else %}
                <td>Descontado</td>
                {% endif %}

                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                 <ul>
                <a class="btn btn-success" href="{{ path('prestamo_show', { 'id': entity.id }) }}">
                <i class="halflings-icon white zoom-in"></i>  
                </a>
                <a class="btn btn-info" href="{{ path('prestamo_edit', { 'id': entity.id }) }}">
                <i class="halflings-icon white edit"></i>  
                </a>
               
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('prestamo_new') }}">
                Registrar Prestamo
            </a>
        </li>
    </ul>
    {% endblock %}
